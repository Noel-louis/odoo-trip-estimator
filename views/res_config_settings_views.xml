<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.estimator</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Trip Estimator" id="trip_estimator"
                    string="Trip estimator" data-key="odoo_trip_estimator">
                    <h2> Trip estimator configuration</h2>
                    <div class="row mt16 o_settings_container" name="api_key_settings">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane" />
                            <div class="o_setting_right_pane">
                                <span>
                                    API key :
                                </span>
                                <field name="x_tripestimator_key"
                                    style="width: 100%; min-width: 4rem;"
                                    placeholder="Your API key" />
                                <br />
                                <span>
                                    Where to get your API key :
                                </span>
                                <a
                                    href="https://openrouteservice.org/dev/#/login"
                                    target="_blank">
                                    OpenRouteService Api
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>