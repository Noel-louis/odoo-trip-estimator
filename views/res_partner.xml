<odoo>
    <record id="action_geo_localise" model="ir.actions.server">
        <field name="name">Geo Localise</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_res_partner" />
        <field name="binding_model_id" ref="model_res_partner" />
        <field name="state">code</field>
        <field name="code">
            records.geo_localize()
        </field>
    </record>

    <record id="action_calculate_distance" model="ir.actions.server">
        <field name="name">Calculate Distance</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_res_partner" />
        <field name="binding_model_id" ref="model_res_partner" />
        <field name="state">code</field>
        <field name="code">
            records.calculate_distance()
        </field>
    </record>

    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base_geolocalize.view_crm_partner_geo_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='geo_location']/group/group" position="inside">
                <field name="address_contact_id" />
                <field name="distance_char" />
                <field name="time_char" />
                <button name="calculate_distance" string="Calculate Distance" type="object"
                    class="oe_highlight" />
            </xpath>
            <xpath
                expr="//notebook/page[@name='contact_addresses']/field[@name='child_ids']/form/sheet/group"
                position="inside">
                <group>
                    <field name="address_contact_id" />
                    <field name="distance_char" />
                    <field name="time_char" />
                </group>
                <!-- give a separation between the button and the field and make them align with
                everything else -->
                <group></group>
                <group>
                    <button name="calculate_distance" string="Calculate Distance" type="object"
                        class="oe_highlight" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>